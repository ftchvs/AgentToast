# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# News API Configuration
NEWS_API_KEY=your_news_api_key

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your_app_secret_key
APP_PORT=8000

# Scheduler Configuration
SCRAPING_START_TIME=06:00
DELIVERY_DEADLINE=07:00

# Audio Configuration
AUDIO_QUALITY_BITRATE=128
DEFAULT_VOICE=alloy  # OpenAI voice options: alloy, echo, fable, onyx, nova, shimmer

# Storage Configuration
STORAGE_PATH=./storage
AUDIO_PATH=./storage/audio
SUMMARIES_PATH=./storage/summaries

# Safety Configuration
MAX_ARTICLES_PER_DAY=50
MAX_SUMMARY_TOKENS=2000
MAX_AUDIO_CHARS=5000
MAX_DAILY_COST=5.0
COST_ALERT_THRESHOLD=4.0
MAX_STORAGE_SIZE=1073741824  # 1GB in bytes
MAX_FILE_AGE_DAYS=7
STORAGE_ALERT_THRESHOLD=0.8
MAX_RETRIES=3
BACKOFF_FACTOR=2

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0 